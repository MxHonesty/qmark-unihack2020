<h1>Register</h1>
<form action="/register" method="POST">
    <label for="male">Mester</label>
  <input type="radio" id="female" name="functie" value="M" required><br>
  <label for="female">Client</label>
  <input type="radio" id="other" name="functie" value="C" required>
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="nume" required>
    </div>
    <div>
        <label for="prenume">Prenume</label>
        <input type="text" id="prenume" name="prenume" required>
    </div>
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
    </div>
    <div>
    <label for="phone">Enter a phone number:</label><br><br>
    <input type="tel" id="phone" name="telefon" placeholder="TEL" pattern="[0-9]{10}" required>
    </div>
    <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
    </div>
    
    <button type="submit">Register</button>
</form>
<a href="/login">Login page</a>